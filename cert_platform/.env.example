# AI CertPro Platform Configuration

# Flask Configuration
FLASK_APP=backend/app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_PATH=database/cert_platform.db

# AI Engine (Optional - for production)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password

# Application Settings
APP_NAME=AI CertPro
APP_URL=http://localhost:5000

# HR Integration
ENABLE_HR_API=true
ENABLE_BULK_OPERATIONS=true

# Source Verification
AUTO_VERIFY_SOURCES=true
SOURCE_RELIABILITY_THRESHOLD=0.70

# Learning Analytics
ENABLE_ANALYTICS=true
TRACK_STUDENT_PROGRESS=true

# Content Generation
AUTO_GENERATE_CONTENT=false
CONTENT_UPDATE_FREQUENCY=weekly

# Security
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/cert_platform.log
